# AGENT HQ - PRODUCTION ENVIRONMENT CONFIGURATION
# Complete reference for all environment variables

# ============================================================
# CRITICAL PRODUCTION VARIABLES (REQUIRED)
# ============================================================

# Database Configuration
DATABASE_URL="postgresql://username:password@host:5432/agentdatabase"
PGHOST="your-db-host"
PGPORT="5432"
PGUSER="your-db-user"  
PGPASSWORD="your-secure-db-password"
PGDATABASE="agent_hq_production"

# Redis Configuration (Required for production)
REDIS_URL="redis://username:password@host:6379"

# Security Configuration
JWT_SECRET="your-super-secure-jwt-secret-minimum-64-characters-long-random-string"
ALLOWED_ORIGINS="https://yourdomain.com,https://app.yourdomain.com"
SESSION_SECRET="your-secure-session-secret-minimum-32-characters-long"

# API Keys (Dual AI System)
OPENAI_API_KEY="sk-or-v1-your-actual-openai-api-key-for-gpt-oss-120b"
DEEPSEEK_API_KEY="sk-your-actual-deepseek-api-key"

# Stripe Payment Configuration
STRIPE_SECRET_KEY="sk_live_your_actual_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_endpoint_secret"
VITE_STRIPE_PUBLIC_KEY="pk_live_your_stripe_public_key"

# ============================================================
# PRODUCTION OPTIMIZATION VARIABLES (OPTIONAL)
# ============================================================

# Performance Configuration
NODE_ENV="production"
PORT="5000"
MAX_CONCURRENT_TASKS="5"
TASK_TIMEOUT="300000"
WORKER_CONCURRENCY="3"

# Security Enhancement
FORCE_HTTPS="true"
SECURE_COOKIES="true"
CSRF_PROTECTION="true"
RATE_LIMIT_ENABLED="true"
MAX_REQUESTS_PER_MINUTE="100"

# Monitoring & Logging
LOG_LEVEL="info"
ENABLE_METRICS="true"
HEALTH_CHECK_PORT="3001"
RESOURCE_MONITORING_INTERVAL="30000"

# Browser Automation Configuration  
BROWSER_TYPE="chromium"
HEADLESS="true"
BROWSER_POOL_SIZE="3"
BROWSER_TIMEOUT="60000"

# Worker Configuration
WORKER_ID="production-worker-1"
GRACEFUL_SHUTDOWN_TIMEOUT="30000"
MAX_WORKER_MEMORY_MB="1024"

# Frontend Configuration
FRONTEND_URL="https://yourdomain.com"
VITE_APP_NAME="Agent HQ"
VITE_APP_VERSION="1.0.0"

# ============================================================
# OPTIONAL INTEGRATIONS
# ============================================================

# External Monitoring (Optional)
SENTRY_DSN="your-sentry-dsn-for-error-tracking"
DATADOG_API_KEY="your-datadog-api-key"
NEWRELIC_LICENSE_KEY="your-newrelic-license"

# Email Notifications (Optional)
SMTP_HOST="smtp.yourdomain.com"
SMTP_PORT="587"
SMTP_USER="noreply@yourdomain.com"
SMTP_PASSWORD="your-smtp-password"

# Backup Configuration (Optional)
BACKUP_S3_BUCKET="agent-hq-backups"
BACKUP_FREQUENCY="daily"
BACKUP_RETENTION_DAYS="30"

# ============================================================
# DEPLOYMENT SPECIFIC VARIABLES
# ============================================================

# Server Configuration
SERVER_NAME="agent-hq-prod"
DEPLOYMENT_ENV="production"
BUILD_VERSION="1.0.0"
DEPLOY_TIMESTAMP="2025-01-01T00:00:00Z"

# SSL Certificate Paths
SSL_CERT_PATH="/etc/ssl/certs/yourdomain.crt"
SSL_KEY_PATH="/etc/ssl/private/yourdomain.key"

# Load Balancer Configuration
LOAD_BALANCER_IP="your-lb-ip"
UPSTREAM_SERVERS="server1:5000,server2:5000"
HEALTH_CHECK_PATH="/api/health"