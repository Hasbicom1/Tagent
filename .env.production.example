# Agent For All - Production Environment Variables
# Copy this to .env.production and update with your actual values
# All values below are REQUIRED for production deployment

# Database Configuration
# Get this from your Neon PostgreSQL dashboard
DATABASE_URL=postgresql://username:password@hostname.neon.tech/dbname?sslmode=require

# Redis Configuration (REQUIRED for production)
# Use Redis Cloud, AWS ElastiCache, or Docker Redis
REDIS_URL=redis://:your-secure-redis-password@redis:6379
REDIS_PASSWORD=your-secure-redis-password-here
# For Redis Cloud: redis://username:password@hostname:port
# For AWS ElastiCache: redis://cache-cluster.abc123.0001.use1.cache.amazonaws.com:6379

# Stripe Configuration (Production)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
VITE_STRIPE_PUBLIC_KEY=pk_live_...

# OpenAI API (REQUIRED)
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...

# Database Password for Docker (only needed if using Docker PostgreSQL instead of Neon)
DB_PASSWORD=your-secure-production-password-here

# Domain Configuration (REQUIRED)
# Your production domain without https://
DOMAIN=yourdomain.com

# Environment Mode
NODE_ENV=production

# Security Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-64-character-random-session-secret-here
CSRF_SECRET=your-64-character-random-csrf-secret-here

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Webhook Configuration
# Enable webhook signature verification in production
STRICT_WEBHOOK_VERIFICATION=true

# Rate Limiting (Redis required)
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60
MAX_PAYMENT_REQUESTS_PER_HOUR=5